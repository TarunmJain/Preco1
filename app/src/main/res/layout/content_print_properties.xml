<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_print_properties"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sourceedge.preco.printproperties.controller.PrintProperties"
    tools:showIn="@layout/activity_print_properties"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paging"
                android:padding="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_5"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@drawable/transparent_square_box">
                <EditText
                    android:layout_toLeftOf="@+id/paging_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="3dp"/>
                <ImageView
                    android:id="@+id/paging_icon"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_alert_circle_outline_grey600_24dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paper Size"
                android:padding="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"
                android:id="@+id/textView3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/transparent_square_box">
                <!--<TextView
                    android:layout_toLeftOf="@+id/icon1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A4"
                    android:padding="@dimen/dimen_10"/>-->
                <Spinner
                    android:id="@+id/paper_size_spinner"
                    android:layout_toLeftOf="@+id/papersize_icon"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                </Spinner>
                <ImageView
                    android:id="@+id/papersize_icon"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_alert_circle_outline_grey600_24dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color"
                android:padding="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/transparent_square_box">
                <!--<TextView
                    android:layout_toLeftOf="@+id/icon1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A4"
                    android:padding="@dimen/dimen_10"/>-->
                <Spinner
                    android:id="@+id/color_spinner"
                    android:layout_toLeftOf="@+id/color_icon"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                </Spinner>
                <ImageView
                    android:id="@+id/color_icon"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_alert_circle_outline_grey600_24dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Single/Double"
                android:padding="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/transparent_square_box">
                <!--<TextView
                    android:layout_toLeftOf="@+id/icon1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A4"
                    android:padding="@dimen/dimen_10"/>-->
                <Spinner
                    android:id="@+id/single_double_spinner"
                    android:layout_toLeftOf="@+id/singledouble_icon"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                </Spinner>
                <ImageView
                    android:id="@+id/singledouble_icon"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_alert_circle_outline_grey600_24dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Page Numbers"
                android:padding="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/transparent_square_box">
                <EditText
                    android:layout_toLeftOf="@+id/pagenumber_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="3dp"/>
                <!--<Spinner
                    android:id="@+id/color_spinner"
                    android:layout_toLeftOf="@+id/icon2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">-->
                <ImageView
                    android:id="@+id/pagenumber_icon"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_alert_circle_outline_grey600_24dp"/>
            </RelativeLayout>
            <!--<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/transparent_square_box">
                <TextView
                    android:layout_toLeftOf="@+id/icon5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:padding="@dimen/dimen_10"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/icon5"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_alert_circle_outline_grey600_24dp"/>
            </RelativeLayout>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Page Type"
                android:padding="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/transparent_square_box">
                <!--<TextView
                    android:layout_toLeftOf="@+id/icon1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A4"
                    android:padding="@dimen/dimen_10"/>-->
                <Spinner
                    android:id="@+id/paper_type_spinner"
                    android:layout_toLeftOf="@+id/pagetype_icon"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                </Spinner>
                <ImageView
                    android:id="@+id/pagetype_icon"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_alert_circle_outline_grey600_24dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Collated/UnCollated"
                android:padding="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_10"
                android:background="@drawable/transparent_square_box">
                <!--<TextView
                    android:layout_toLeftOf="@+id/icon1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A4"
                    android:padding="@dimen/dimen_10"/>-->
                <Spinner
                    android:id="@+id/collated_uncollated_spinner"
                    android:layout_toLeftOf="@+id/collateduncollated_icon"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                </Spinner>
                <ImageView
                    android:id="@+id/collateduncollated_icon"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_alert_circle_outline_grey600_24dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/next_button"
                android:layout_width="@dimen/dimen_150"
                android:layout_height="wrap_content"
                android:text="UPDATE"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen_10"
                android:textColor="@color/colorWhite"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:padding="@dimen/dimen_15"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
