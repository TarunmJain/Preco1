<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_print_properties"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sourceedge.preco.printproperties.controller.PrintProperties"
    tools:showIn="@layout/activity_print_properties">

    <LinearLayout
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
       <!-- <TextView
            android:id="@+id/edit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="EDIT"
            android:textColor="@color/colorAccent"
            android:background="@color/colorGrey"
            android:gravity="center"
            android:padding="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_1"/>-->

        <TextView
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="UPDATE"
            android:textColor="@color/colorWhite"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="@dimen/dimen_15"/>

    </LinearLayout>

    <ScrollView
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paging"
                android:padding="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_5"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@drawable/transparent_square_box">
                <TextView
                    android:layout_toLeftOf="@+id/icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full Document"
                    android:padding="@dimen/dimen_10"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_alert_circle_outline_grey600_24dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paper Size"
                android:padding="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"
                android:id="@+id/textView3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/transparent_square_box">
                <!--<TextView
                    android:layout_toLeftOf="@+id/icon1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A4"
                    android:padding="@dimen/dimen_10"/>-->
                <Spinner
                    android:id="@+id/paper_size_spinner"
                    android:layout_toLeftOf="@+id/icon1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                </Spinner>
                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_alert_circle_outline_grey600_24dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color"
                android:padding="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/transparent_square_box">
                <TextView
                    android:layout_toLeftOf="@+id/icon3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Black/White"
                    android:padding="@dimen/dimen_10"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_alert_circle_outline_grey600_24dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Single/Double"
                android:padding="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/transparent_square_box">
                <TextView
                    android:layout_toLeftOf="@+id/icon4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Double side"
                    android:padding="@dimen/dimen_10"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_alert_circle_outline_grey600_24dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. of Copies"
                android:padding="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/transparent_square_box">
                <TextView
                    android:layout_toLeftOf="@+id/icon5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:padding="@dimen/dimen_10"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/icon5"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_alert_circle_outline_grey600_24dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Collated/UnCollated"
                android:padding="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_10"
                android:background="@drawable/transparent_square_box">
                <TextView
                    android:layout_toLeftOf="@+id/icon6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Collated"
                    android:padding="@dimen/dimen_10"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/icon6"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_alert_circle_outline_grey600_24dp"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
